<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".dashboard.myattendance.AddAttendenceFragment">


    <LinearLayout
        android:id="@+id/btn_punch_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_conner"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_iconfinder_log_in_2561252"
            android:drawableLeft="@drawable/ic_iconfinder_log_in_2561252"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:text="@string/punch_in"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/in_time"
        android:textSize="@dimen/_10ssp" />

    <LinearLayout
        android:id="@+id/btn_punch_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/round_conner"
        android:backgroundTint="@android:color/holo_red_dark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_iconfinder_log_out_2561461"
            android:drawableLeft="@drawable/ic_iconfinder_log_out_2561461"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:text="@string/punch_out"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/out_time"
        android:textSize="@dimen/_10ssp" />


</LinearLayout>