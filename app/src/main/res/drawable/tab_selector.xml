<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:topLeftRadius="10dp" />
            <gradient android:angle="-270" android:endColor="#000" android:gradientRadius="400" android:startColor="#000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#8858585a" android:endColor="#88a9a9a9" android:startColor="#880f0f10" />
            <corners android:bottomLeftRadius="10dp" android:topLeftRadius="10dp" />
        </shape>
    </item>
</selector>